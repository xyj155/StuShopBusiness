<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.example.stushopbusiness.weight.CustomVideoView
        android:id="@+id/video_login"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.LoginActivity">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="78dp"
            android:orientation="vertical"
            android:paddingLeft="@dimen/dp_18"
            android:paddingRight="@dimen/dp_18">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="bottom"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/dp_160"
                    android:layout_height="@dimen/dp_70"
                    android:padding="@dimen/dp_6"
                    android:src="@drawable/ic_app_name" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="@dimen/dp_12"
                    android:text="校园优惠领导者"
                    android:textColor="#fff"
                    android:textStyle="bold" />
            </LinearLayout>


            <EditText
                android:id="@+id/et_username"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:layout_marginTop="@dimen/dp_8"
                android:layout_marginBottom="@dimen/dp_10"
                android:background="@drawable/login_border_30_bg"
                android:hint="请输入手机号"
                android:inputType="phone|number"
                android:paddingLeft="@dimen/dp_30"
                android:textSize="17sp" />

            <EditText
                android:id="@+id/et_password"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:background="@drawable/login_border_30_bg"
                android:hint="请输入密码"
                android:inputType="textPassword"
                android:paddingLeft="@dimen/dp_30"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/tv_login"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:layout_marginTop="@dimen/dp_30"
                android:background="@drawable/login_tv_1_bg"
                android:gravity="center"
                android:text="登录"
                android:textColor="#000"
                android:textSize="17sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_forget"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:padding="@dimen/dp_8"
                    android:text="忘记密码"
                    android:textColor="#fff"
                    android:textSize="13sp" />
            </RelativeLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-30dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="gone">

            <View
                android:layout_width="@dimen/dp_80"
                android:layout_height="@dimen/dp_0.5"
                android:background="#d8d8d8" />

            <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="或" />

            <View
                android:layout_width="@dimen/dp_80"
                android:layout_height="@dimen/dp_0.5"
                android:background="#d8d8d8" />
        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:padding="@dimen/dp_15"
            android:text="商学院所有最终解释权归 个人徐易杰所有"
            android:textSize="10sp" />
    </RelativeLayout>

</FrameLayout>

